<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--preference setting theme -->
        <item name="android:preferenceStyle">@style/PreferenceThemeOverlay</item>
    </style>

    <!--ActionBar Sunshine logo, no title-->
    <style name="ActionBar.MSunShine.Logo.NoTitle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!--MainActivity theme-->
    <style name="AppTheme.MainActivity" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.MSunShine.Logo.NoTitle</item>
    </style>

    <!--weather_detail label style-->
    <style name="DetailLabel" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/detail_accent_label</item>
        <item name="android:textSize">@dimen/weather_detail_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!--weather_detail value style-->
    <style name="DetailValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/weather_detail_text_size</item>
    </style>

    <!--Today ConstraintLayout-->
    <style name="TodayConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/weather_primary_horizontal_padding
        </item>
        <item name="android:paddingLeft" tools:targetApi="jelly_bean_mr1">
            @dimen/weather_primary_horizontal_padding
        </item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/weather_primary_horizontal_padding
        </item>
        <item name="android:paddingRight" tools:targetApi="jelly_bean_mr1">
            @dimen/weather_primary_horizontal_padding
        </item>
        <item name="android:paddingTop" tools:targetApi="jelly_bean_mr1">
            @dimen/weather_primary_vertical_padding
        </item>
        <item name="android:paddingBottom" tools:targetApi="jelly_bean_mr1">
            @dimen/weather_primary_vertical_padding
        </item>
    </style>

</resources>
