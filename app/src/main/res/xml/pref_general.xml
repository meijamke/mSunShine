<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/pref_city_key"
        android:defaultValue="@string/pref_city_default"
        android:title="@string/pref_city_label"
        android:inputType="text"
        android:singleLine="true"
        android:hint="@string/edit_hint"
        android:textSize="20sp" />

    <ListPreference
        android:key="@string/pref_temp_units_key"
        android:defaultValue="@string/pref_temp_units_default"
        android:title="@string/pref_temp_units_label"
        android:entries="@array/pref_temp_units_options"
        android:entryValues="@array/pref_temp_units_values" />

    <CheckBoxPreference
        android:defaultValue="@bool/pref_notification_default"
        android:key="@string/pref_notification_key"
        android:summaryOff="@string/pref_notification_off"
        android:summaryOn="@string/pref_notification_on"
        android:title="@string/pref_notification_label" />
</PreferenceScreen>